<h1>Contacts imported</h1>

<p>
  <strong>Import:</strong>
  <%= form_tag import_contacts_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import Contacts" %>
  <% end %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Birthday</th>
      <th>Credit card number</th>
      <th>Credit card franchise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.telephone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.address %></td>
        <td><%= custom_format_date(contact.birthday) %></td>
        <td><%= contact.credit_card_number %></td>
        <td><%= contact.credit_card_franchise %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>