<h1>List of imported contacts</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Birthday</th>
      <th>Credit card number</th>
      <th>Credit card franchise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.telephone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.address %></td>
        <td><%= custom_format_date(contact.birthday) %></td>
        <td>**************<%= contact.credit_card_last_digits %></td>
        <td><%= contact.credit_card_franchise %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= will_paginate @contacts %>
