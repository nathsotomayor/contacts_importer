<h1>List of invalid contacts</h1>

<br>

<table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Telephone </th>
      <th>Email </th>
      <th>Address </th>
      <th>Birthday </th>
      <th>Credit card </th>
      <th>Franchise </th>
      <th>Error message </th>
    </tr>
  </thead>

  <tbody>
    <% @invalid_contacts.each do |invalid_contact| %>
      <tr>
        <td><%= invalid_contact.name %></td>
        <td><%= invalid_contact.telephone %></td>
        <td><%= invalid_contact.email %></td>
        <td><%= invalid_contact.address %></td>
        <td><%= custom_format_date(invalid_contact.birthday) %></td>
        <td><%= invalid_contact.credit_card_last_digits %></td>
        <td><%= invalid_contact.credit_card_franchise %></td>
        <td><%= invalid_contact.error %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= will_paginate @invalid_contacts %>